@model IEnumerable<string>
    @Html.ActionLink("全部分类","List","Product",null,new { @class="btn btn-block btn-default btn-lg"})
@foreach (var link in Model)
{
    @Html.RouteLink(
    link,
    new { controller = "Product", action = "List", category = link, page = 1 },
    new { @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectCategory ? " btn-primary" : "")}
    )
}